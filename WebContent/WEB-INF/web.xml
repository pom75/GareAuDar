<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>TrainAtGare</servlet-name>
    <servlet-class>servlets.TrainAtGareServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Itineraire</servlet-name>
    <servlet-class>servlets.ItineraireServlet</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>SendKey</servlet-name>
    <servlet-class>servlets.SendKeyServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>TrainAtGare</servlet-name>
    <url-pattern>/trainatgare</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Itineraire</servlet-name>
    <url-pattern>/itineraire</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SendKey</servlet-name>
    <url-pattern>/sendkey</url-pattern>
  </servlet-mapping>
</web-app>